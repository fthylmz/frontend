<section class="section{% if class %} {{class}}{% endif %}"{% if labelledby %} aria-labelledby="{{labelledby}}"{% endif %}>
  <header class="section__header">
    <h2 class="section__title"{% if labelledby %} id="{{labelledby}}"{% endif %}>{{title}}</h2>
    {% if moreLinkHref and moreLinkText %}
    <div class="section__nav">
      <a href="{{moreLinkHref}}" class="section__nav-link">{{moreLinkText}}</a>
    </div>
    {% endif %}
  </header>
  {% block content %}{% endblock %}
</section>
