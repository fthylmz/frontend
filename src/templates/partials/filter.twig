<fieldset class="filter">
  <legend class="sr-only">{{label}}</legend>

  <a href="#{{id}}" class="filter__button u-clearfix" data-toggle-target="#{{id}}" data-toggle-group="filters">
    {{label}}
    <span class="filter__button-icon u-float-right">
      <svg class="icon">
        <use xlink:href="#icon-arrow-left" />
      </svg>
    </span>
  </a>

  <div class="filter__content" id="{{id}}">
    {% for item in items %}
      <div class="filter__group">
        <label for="{{item.id}}" class="filter__label">
          <input type="radio" name="{{id}}" id="{{item.id}}" class="filter__control" {% if item.active %}checked{% endif %}>
          <span class="filter__text">{{item.label}}</span>
        </label>
      </div>
    {% endfor %}
  </div>
</fieldset>
