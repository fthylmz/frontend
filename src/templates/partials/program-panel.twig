<div class="program-panel">
  <div class="program-panel__media">

    <picture>
      <source srcset="/images/program-panel-xl.jpg" media="(min-width: 960px)">
      <source srcset="/images/program-panel-lg.jpg" media="(min-width: 580px)">
      <source srcset="/images/program-panel-md.jpg" media="(min-width: 320px)">
      <source srcset="/images/program-panel-xs.jpg">
      <img src="/images/program-panel-xl.jpg" alt="">
    </picture>

  </div>
  {#should this be the figcaption?#}
  <div class="program-panel__content">

    <div class="program-panel__item program-panel__item--primary">
      {% include 'partials/quote.twig' with {
        light: true,
        is_quote: true,
        text: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora dolorem architecto asperiores excepturi blanditiis ducimus, unde maiores animi dolor expedita. Atque soluta ipsam consequatur unde, ex saepe tempore nulla aspernatur.',
        cite: '<strong>James Peter</strong><br>Alumnus'
      } %}
    </div>
    <div class="program-panel__item program-panel__item--secondary">

      <h3 class="program-panel__stats-title">Class of 2016</h3>

      {% set stats = [
        { label: '81%', text: 'Using Language &amp; Cultural Skills' },
        { label: '85%', text: 'Pursing Career Passions' },
        { label: '88%', text: 'Living Aligned with Values' }
      ] %}

      <dl>
        {% for item in stats %}
          <dt class="program-panel__stat-label">{{item.label}}</dt>
          <dd class="program-panel__stat-text">{{item.text}}</dd>
        {% endfor %}
      </dl>

      <a href="#" class="program-panel__stats-button button button--secondary">View Employment Report</a>

    </div>
  </div>
</div>
