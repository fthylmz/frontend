<div class="publications">
  <div class="container">
    {% embed 'partials/section.twig' with {
      title: 'Latest publications by our faculty',
      moreLinkText: 'View all',
      moreLinkHref: '#'
    } %}
      {% block content %}
        <div class="publications__list swiper-container js-publications-swiper">
          <div class="swiper-wrapper">
            {% for i in 0..7 %}
              <div class="publications__item swiper-slide">
                <div class="publications__cover">
                  <a href="#">
                    <figure>
                      <img src="//placehold.it/148x184" alt="">
                    </figure>
                  </a>
                </div>
                <h3 class="publications__title"><a href="#">An Economic Justification for the Development and Establishment of Seascapes in the Coral Triangle</a></h3>
              </div>
            {% endfor %}
          </div>

          <button
            class="publications__button publications__button--prev js-publications-prev-button"
            aria-label="Previous publication">
              <svg class="icon">
                <use xlink:href="#icon-arrow-left" />
              </svg>
            </button>
          <button
            class="publications__button publications__button--next js-publications-next-button"
            aria-label="Next publication">
              <svg class="icon">
                <use xlink:href="#icon-arrow-right" />
              </svg>
            </button>
        </div>
      {% endblock %}
    {% endembed %}
  </div>
</div>
