{% extends "layout.twig" %}

{% set page_header = {
  title: 'Faculty in the Field',
  breadcrumb: [
    { text: 'Leadership and Impact', url: '' }
  ]
} %}

{% block page %}

  {% embed 'partials/page-hero.twig' %}
    {% block content %}
